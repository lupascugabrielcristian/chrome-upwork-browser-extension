{
  "manifest_version": 3,
  "name": "Upwork Highlighter",
  "version": "1.4.0",
  "description": "Highlights some words in red and other in green on Upwork job posts.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}

